@model IEnumerable<project_management_for_ISOGES.Entities.CorreoEnt>

@{
    ViewBag.Title = "ConsultarCorreos";
}

<div class="body-wrapper">

    <!--  Row 1 -->
    <div class="row">
        <div class="col-12">

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Asunto</th>
                        <th>Cuerpo</th>
                        <th>Correo Electrónico</th>
                        <th>Fecha</th>
                        <th>Estado</th>
                    </tr>
                <thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@item.IdCorreo</td>
                        <td>@item.Asunto</td>
                        <td>@item.Cuerpo</td>
                        <td>@item.NombreCorreo</td>
                        <td>@item.Fecha</td>
                        <td>@item.Estado</td>

                        <td>
                            @if (item.Estado == true)
                            {
                                <p>Activo</p>
                            }
                            else
                            {
                                <p>Inactivo</p>
                            }
                        </td>
                        <td>
                            <a href="@Url.Action("ConsultarCorreos","Correo", new { q = item.IdCorreo })" class="btn btn-light">Editar</a>
                            <a href="@Url.Action("EliminarCorreo","Correo", new { q = item.IdCorreo })" class="btn btn-danger">Eliminar</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
            
                <div class="col-4">
                    <a class="btn btn-success" href="@Url.Action("CrearCorreo","Correo")">Enviar Correo</a>
                </div>

            </div>

        </div>
    </div>
</div>


