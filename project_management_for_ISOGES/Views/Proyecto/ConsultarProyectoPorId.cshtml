@model project_management_for_ISOGES.Entities.ProyectoEnt
@{
    ViewBag.Title = "Consultar Proyecto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="body-wrapper">
    <div class="container mt-5">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">@Model.NombreProyecto</h5>
                <p class="card-text">@Model.DescripcionProyecto</p>
                <p class="card-text"><strong>Cliente:</strong>@Model.NombreCliente</p>
                <p class="card-text"><strong>Monto Estimado:</strong>@Model.MontoEstimado</p>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-md-6">
                <h4>Requerimientos <a class="btn btn-sm btn-success" href="@Url.Action("NuevoTask","Requerimientos", new { q = Model.IdProyecto })">Agregar</a></h4>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Requerimiento</th>
                            <th>Empleado</th>
                            <th>F Inicio</th>
                            <th>F Limite</th>
                            <th>Estado</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.ListaRequerimientos) 
                        { 
                        <tr>
                            <td>@item.NombreRequerimiento</td>
                            <td>@item.NombreEmpleadoAsignado</td>
                            <td>@item.FechaInicio</td>
                            <td>@item.FechaLimite</td>
                            @if(@item.Estado)
                            {
                            <td>Completo</td>
                            }else{
                            <td>Incompleto</td>
                            }

                        </tr>
                        }
                    

                    </tbody>
                </table>

            </div>
            <div class="col-md-6">
                <h4>Cobros <a class="btn btn-sm btn-success" href="@Url.Action("NuevoCobro","Cobro", new { q = Model.IdProyecto })">Agregar</a></h4>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Fecha</th>
                            <th>Tipo</th>
                            <th>Estado</th>
                            <th>Monto</th>
                            <th>Proyecto</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.ListaCobros) 
                        {
                        <tr>
                            <td>@item.IdCobro</td>
                            <td>@item.Fecha</td>
                            <td>@item.NombreTipoCobro</td>
                            <td>@item.NombreEstado</td>
                            <td>@item.Monto</td>
                            <td>@item.NombreProyecto</td>
                        </tr>
                        }
                        
                        <!-- Agregar más filas si es necesario -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
