
@{
    ViewBag.Title = "ConsultarProyectos";
}

<div class="body-wrapper">

    <!--  Row 1 -->
    <div class="row">
        <div class="col-12">

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>IdProyecto</th>
                        <th>Nombre</th>
                        <th>Descripcion</th>
                        <th>Cliente</th>
                        <th>Estado</th>
                        <th>MontoEstimado</th>
                    </tr>
                <thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.IdProyecto</td>
                            <td>@item.Nombre</td>
                            <td>@item.Descripcion</td>
                            <td>@item.Cliente</td>
                            <td>@item.Estado</td>
                            <td>@item.MontoEstimado</td>
                            <td>
                                @if (item.Estado == true)
                                {
                                    <p>Activo</p>
                                }
                                else
                                {
                                    <p>Inactivo</p>
                                }
                            </td>
                            <td>
                                
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="row">
                <div class="col-8">
                    <div style="text-align:center" class="alert alert-warning" role="alert">
                        @ViewBag.MsjPantalla
                    </div>
                </div>
                <div class="col-4">
                    <a class="btn btn-success" href="@Url.Action("CrearProyecto","Proyecto")">Agregar Proyecto</a>
                </div>

            </div>

        </div>
    </div>
</div>

