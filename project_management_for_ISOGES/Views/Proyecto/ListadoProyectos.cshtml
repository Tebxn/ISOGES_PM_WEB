@model IEnumerable<project_management_for_ISOGES.Entities.ProyectoEnt>
@{
    ViewBag.Title = "ListadoProyectos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="body-wrapper">
    <h2>ListadoProyectos</h2>

    @foreach (var item in Model)
    {
        <div class="container mt-5">
            <div class="card">
                <div class="card-body d-flex justify-content-between">
                    <div>
                        <h5 class="card-title">@item.NombreProyecto</h5>
                        <p class="card-text"><strong>Cliente:</strong> @item.NombreCliente</p>
                        <p class="card-text"><strong>Etapa:</strong> @item.NombreEstado</p>
                    </div>
                    <a href="@Url.Action("ConsultarProyectoPorId","Proyecto", new { q = item.IdProyecto })" class="btn btn-primary">Ver</a>
                </div>
            </div>
        </div>
    }

</div>


