@model project_management_for_ISOGES.Entities.UsuarioEnt
@{
    ViewBag.Title = "Cambio de Contraseña";
    Layout = "~/Views/Shared/_Layout - Login.cshtml";
}

@using (Html.BeginForm("CambiarContrasenaTemp", "Usuario", FormMethod.Post))
{
    <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
         data-sidebar-position="fixed" data-header-position="fixed">
        <div class="position-relative overflow-hidden radial-gradient min-vh-100 d-flex align-items-center justify-content-center" style="background-image: url('../../images/login_background.jpg')">
            <div class="d-flex align-items-center justify-content-center w-100">
                <div class="row justify-content-center w-100">
                    <div class="col-md-8 col-lg-6 col-xxl-3">
                        <div class="card mb-0">
                            <div class="card-body">
                                <h4 class="mb-4">Debe cambiar su contraseña para continuar</h4>

                                <div class="form-group mb-3">
                                    <label for="Temporal" class="form-label">Contraseña actual o temporal</label>
                                    @Html.TextBoxFor(m => m.Contrasena, new { @type = "password", @class = "form-control", @placeholder = "Contraseña temporal" })
                                </div>
                                <div class="form-group mb-4">
                                    <label for="NuevaContrasena" class="form-label">Nueva Contraseña</label>
                                    @Html.TextBoxFor(m => m.NuevaContrasena, new { @type = "password", @class = "form-control", @placeholder = "Nueva Contraseña" })
                                </div>
                                <div class="form-group mb-4">
                                    <label for="ConfirmarNuevaContrasena" class="form-label">Confirmar Nueva Contraseña</label>
                                    @Html.TextBoxFor(m => m.ConfirmarNuevaContrasena, new { @type = "password", @class = "form-control", @placeholder = "Confirmar Contraseña" })
                                </div>
                                @if (ViewBag.MsjPantalla != null)
                                {
                                    <div class="alert alert-warning d-flex align-items-center justify-content-between mb-4">
                                        @ViewBag.MsjPantalla
                                    </div>
                                }
                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary w-100 py-2 fs-4 mb-4 rounded-2">Iniciar Sesión</button>
                                </div>
                                <div class="d-flex align-items-center justify-content-center">
                                    <!-- Aquí puedes agregar cualquier otro contenido que desees -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


}



