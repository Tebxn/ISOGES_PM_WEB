@model IEnumerable<project_management_for_ISOGES.Entities.UsuarioEnt>

@{
    ViewBag.Title = "ConsultarUsuarios";
}

<div class="body-wrapper">

    <!--  Row 1 -->
    <div class="row">
        <div class="col-12">

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Identificación</th>
                        <th>Nombre</th>
                        <th>Apellido 1</th>
                        <th>Apellido2</th>
                        <th>Correo</th>
                        <th>Telefono</th>
                        <th>Puesto</th>
                        <th>Permisos</th>
                        <th>Estado</th>
                        <th>Accion</th>
                    </tr>
                <thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Identificacion</td>
                            <td>@item.Nombre</td>
                            <td>@item.Apellido1</td>
                            <td>@item.Apellido2</td>
                            <td>@item.CorreoElectronico</td>
                            <td>@item.Telefono</td>
                            <td>@item.NombrePuesto</td>
                            <td>@item.NombreTipoUsuario</td>
                            <td>
                                @if (item.Estado == true)
                                {
                                    <a class="btn btn-success">Activo</a>
                                }
                                else
                                {
                                    <a class="btn btn-danger">Inactivo</a>
                                }
                            </td>
                            <td>
                                <a href="@Url.Action("EditarUsuario","Usuario", new { q = item.IdUsuario })" class="btn btn-outline-info">Editar</a>
                                <a href="@Url.Action("InactivarUsuario","Usuario", new { q = item.IdUsuario })" class="btn btn-outline-danger">Inactivar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="row">
                <div class="col-4">
                    <a class="btn btn-success" href="@Url.Action("CrearUsuario","Usuario")">Agregar Usuario</a>
                </div>
                @if (ViewBag.MsjPantalla != null)
                {
                    <div class="col-4">
                        <div style="text-align:center" class="alert alert-warning" role="alert">
                            @ViewBag.MsjPantalla
                        </div>
                    </div>
                }


            </div>

        </div>
    </div>
</div>
