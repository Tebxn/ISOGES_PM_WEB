@model IEnumerable<project_management_for_ISOGES.Entities.RequerimientoEnt>

@{
    ViewBag.Title = "ConsultarRequerimientos";
}

<div class="body-wrapper">

        <!--  Row 1 -->
            <div class="row">
                <div class="col-12">

                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Codigo</th>
                                <th>Nombre</th>
                                <th>Descripcion</th>
                                <th>PDF</th>
                                <th>Estado</th>
                            </tr>
                        <thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.IdRequerimiento</td>
                                    <td>@item.Codigo</td>
                                    <td>@item.Nombre</td>
                                    <td>@item.Descripcion</td>
                                    <td>
                                        @if (item.URL != null)
                                        {
                                            <a href="@Url.Content("~/" + item.URL)" target="_blank">
                                                <i class="far fa-file-pdf"></i> Ver PDF
                                            </a>
                                        }
                                        else
                                        {
                                            <p>No hay documento agregado</p>
                                        }
                                    </td>
                                    <td>
                                        @if (item.Estado == true)
                                        {
                                            <p>Activo</p>
                                        }
                                        else
                                        {
                                            <p>Inactivo</p>
                                        }
                                    </td>
                                    <td>
                                        <a href="@Url.Action("EditarRequerimiento","Requerimientos", new { q = item.IdRequerimiento })" class="btn btn-light">Editar</a>
                                        <a href="@Url.Action("InactivarRequerimiento","Requerimientos", new { q = item.IdRequerimiento })" class="btn btn-danger">Cambiar Estado</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="row">
                        @if (ViewBag.MsjPantalla != null)
                        {
                            <div class="col-8">
                                <div style="text-align:center" class="alert alert-warning" role="alert">
                                    @ViewBag.MsjPantalla
                                </div>
                            </div>
                        }
                        <div class="col-4">
                            <a class="btn btn-success" href="@Url.Action("CrearRequerimiento","Requerimientos")">Agregar Requerimiento</a>
                        </div>

                    </div>

                </div>
            </div>
        </div>
 