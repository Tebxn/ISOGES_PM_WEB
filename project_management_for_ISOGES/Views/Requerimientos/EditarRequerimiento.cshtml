@model project_management_for_ISOGES.Entities.RequerimientoEnt
@{
    ViewBag.Title = "EditarRequerimiento";
}

<h2>EditarUsuario</h2>

<div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
     data-sidebar-position="fixed" data-header-position="fixed">
    <div class="position-relative overflow-hidden radial-gradient min-vh-100 d-flex align-items-center justify-content-center">
        <div class="d-flex align-items-center justify-content-center w-100">
            <div class="row justify-content-center w-100">
                <div class="col-md-10 col-lg-8 col-xxl-6">
                    <div class="card mb-0">
                        <div class="card-body">
                            @using (Html.BeginForm("EditarRequerimiento", "Requerimientos", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                <form>
                                    <div>
                                        @Html.TextBoxFor(m => m.IdRequerimiento, new { @type = "hidden", @class = "form-control", @placeholder = "IdRequerimiento" })
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-md-6">
                                            <label for="Codigo" class="form-label">Codigo</label>
                                            @Html.TextBoxFor(m => m.CodigoRequerimiento, new { @type = "text", @class = "form-control", @placeholder = "Codigo" })
                                        </div>
                                        <div class="col-md-6">
                                            <label for="Nombre" class="form-label">Nombre</label>
                                            @Html.TextBoxFor(m => m.NombreRequerimiento, new { @type = "text", @class = "form-control", placeholder = "Nombre" })
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-md-6">
                                            <label for="Descripcion" class="form-label">Descripcion</label>
                                            @Html.TextBoxFor(m => m.DescripcionRequerimiento, new { @type = "text", @class = "form-control", placeholder = "Descripcion" })
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-md-6">
                                            <label for="file" class="form-label">Archivo PDF</label>
                                            @Html.TextBoxFor(m => m.URLRequerimiento, new { @type = "text", @class = "form-control", placeholder = "No Archivo PDF agregado", @readonly = "readonly" })
                                            <input type="file" name="file" class="form-control-file" accept="application/pdf">
                                        </div>
                                    </div>

                                    <div class="row justify-content-center">
                                        <div class="col-6">
                                            <button type="submit" class="btn btn-success w-100 py-2 fs-4 rounded-2">Actualizar Requerimiento</button>
                                        </div>
                                    </div>
                                </form>
                            }
                        </div>
                        @if (ViewBag.MsjPantalla != null)
                        {
                            <div class="alert alert-warning d-flex align-items-center justify-content-between mb-4">
                                @ViewBag.MsjPantalla
                            </div>
                        }
                    </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

