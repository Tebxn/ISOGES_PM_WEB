@model project_management_for_ISOGES.Entities.CobroEnt

@{
    ViewBag.Title = "AgregarCobro";
}

<div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
     data-sidebar-position="fixed" data-header-position="fixed">
    <div class="position-relative overflow-hidden radial-gradient min-vh-100 d-flex align-items-center justify-content-center">
        <div class="d-flex align-items-center justify-content-center w-100">
            <div class="row justify-content-center w-100">
                <div class="col-md-10 col-lg-8 col-xxl-6">
                    <div class="card mb-0">
                        <div class="card-body">
                            @using (Html.BeginForm("CrearCobro", "Cobro", FormMethod.Post))
                            {
                                <form>
                                    <div class="row mb-3">
                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <label for="NombreTipoCobro" class="form-label">Nombre Cobro</label>
                                                @Html.DropDownListFor(m => m.NombreTipoCobro, ViewBag.ComboTipoCobros as List<SelectListItem>, new
                                                {
                                                    @class = "form-control",
                                                @style = "background-color: white!important"
                                                })
                                            </div>
                                            <div class="row mb-3">
                                                <div class="col-md-6">
                                                    <label for="Destinatario" class="form-label">Destinatario</label>
                                                    @Html.DropDownListFor(m => m.NombreProyecto, ViewBag.ComboProyectos as List<SelectListItem>, new
                                                    {
                                                        @class = "form-control",
                                                    @style = "background-color: white!important"
                                                    })
                                                </div>
                                                <div class="row mb-3">
                                                    <div class="col-md-6">
                                                        <label for="NombreEstadoCobro" class="form-label">Estado</label>
                                                        @Html.DropDownListFor(m => m.NombreEstado, ViewBag.ComboEstadoCobros as List<SelectListItem>, new
                                                        {
                                                            @class = "form-control",
                                                        @style = "background-color: white!important"
                                                        })
                                                    </div>
                                                    <div class="row mb-3">
                                                        <div class="col-md-6">
                                                            <label for="Monto" class="form-label">Monto</label>
                                                            @Html.TextBoxFor(m => m.Monto, new { @type = "text", @class = "form-control", @placeholder = "Monto" })
                                                        </div>
                                                    </div>




                                                </div>
                                                <div class="row justify-content-center">
                                                    <div class="col-6">
                                                        <button type="submit" class="btn btn-primary w-100 py-2 fs-4 rounded-2">Ingresar Cobro</button>
                                                    </div>
                                                </div>
</form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


