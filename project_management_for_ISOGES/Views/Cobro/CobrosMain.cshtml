@model IEnumerable<project_management_for_ISOGES.Entities.CobroEnt>

@{
    ViewBag.Title = "Cobros";
}

<div class="body-wrapper">

    <!--  Row 1 -->
    <div class="row">
        <div class="col-12">

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Id Cobro</th>
                        <th>Fecha</th>
                        <th>Tipo</th>
                        <th>Estado</th>
                        <th>Monto</th>
                        <th>Proyecto</th>

                    </tr>
                <thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.IdCobro</td>
                            <td>@item.Fecha</td>
                            <td>@item.NombreTipoCobro </td>
                            <td>@item.NombreEstado</td>
                            <td>@item.Monto</td>
                            <td>@item.NombreProyecto</td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="row">
                <div class="col-8">
                    <div style="text-align:center" class="" role="alert">
                        @ViewBag.MsjPantalla
                    </div>
                </div>


                <div class="container">
                    <div class="row">
                        <div class="col-4">
                            <a class="btn btn-primary float-left" href="@Url.Action("CrearCobro","Cobro")">Agregar Cobro</a>
                        </div>
                    </div>
                </div>


            </div>

        </div>
    </div>
</div>