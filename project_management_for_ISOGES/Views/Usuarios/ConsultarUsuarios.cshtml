@model IEnumerable<project_management_for_ISOGES.Entities.UsuarioEnt>

@{
    ViewBag.Title = "Consultar Usuarios";
}

<br>
<h5>Usuarios</h5>
<br>

<div class="row">
    <div class="col-12">

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Identificación</th>
                    <th>Nombre</th>
                    <th>Apellido 1</th>
                    <th>Apellido2</th>
                    <th>Identificacion</th>
                    <th>Correo</th>
                    <th>Telefono</th>
                    <th>Tipo Usuario</th>
                    <th>Estado</th>
                    <th></th>
                </tr>
            <thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Identificacion</td>
                        <td>@item.Nombre</td>
                        <td>@item.CorreoElectronico</td>
                        <td>
                            @if (item.Estado == true)
                            {
                                <p>Activo</p>
                            }
                            else
                            {
                                <p>Inactivo</p>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>